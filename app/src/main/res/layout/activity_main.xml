                    android:layout_marginBottom="20dp"
                    android:background="@color/black"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="Shop now"
