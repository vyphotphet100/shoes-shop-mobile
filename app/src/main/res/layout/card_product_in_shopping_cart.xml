<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TableRow
        android:padding="1dp"
        android:layout_width="120dp"
        android:background="#E8E8E8">
        <ImageView
            android:id="@+id/cardProductInShoppingCart_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:padding="20dp"
            android:background="#F6F6F6"
            android:src="@mipmap/img_product1"/>
    </TableRow>
    <TableRow
        android:padding="1dp"
        android:background="#E8E8E8"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/cardProductInShoppingCart_txtProductName"
            android:text="Nike Air Force 1 '07"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="5dp"
            android:background="@color/white"
            android:maxWidth="30dp"/>
    </TableRow>
    <TableRow
        android:padding="1dp"
        android:background="#E8E8E8"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/cardProductInShoppingCart_txtBrand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Converse"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="5dp"
            android:background="@color/white"
            android:maxWidth="30dp"/>
    </TableRow>
    <TableRow
        android:padding="1dp"
        android:background="#E8E8E8"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="-5dp">
                    <TextView
                        android:id="@+id/cardProductInShoppingCart_txtIncQty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="+"/>
                </androidx.cardview.widget.CardView>


                <EditText
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/cardProductInShoppingCart_edtTxtQuantity"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:inputType="none"
                    android:background="#DCDDDD"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/cardProductInShoppingCart_txtDecQty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="-"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <ImageButton
                android:id="@+id/cardProductInShoppingCart_imgResetQuantity"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_reset_quantity"/>

            <ImageButton
                android:id="@+id/cardProductInShoppingCart_imgDelete"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_product"/>

        </LinearLayout>
    </TableRow>
    <TableRow
        android:padding="1dp"
        android:background="#E8E8E8"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/cardProductInShoppingCart_txtUnitPrice"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="209.0"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="5dp"
            android:background="@color/white"/>
    </TableRow>
    <TableRow
        android:padding="1dp"
        android:background="#E8E8E8"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/cardProductInShoppingCart_txtTotalCost"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="209.0"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="5dp"
            android:background="@color/white"/>
    </TableRow>
    <TableRow
        android:padding="1dp"
        android:background="#E8E8E8"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <FrameLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:layout_gravity="center"
                android:id="@+id/cardProductInShoppingCart_chBxPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>

    </TableRow>
</TableRow>
