<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:background="#DADADA"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/cardHeader_imgLogo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/img_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/headerCard_txtWomenShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="Women's Shoes"
            android:textAlignment="textEnd"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/headerCard_txtMenShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Men's Shoes"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/headerCard_txtSportsWear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Sportswear Collection"
            android:textAlignment="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headerCard_imgSearch"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/headerCard_imgAccount"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/headerCard_imgAccount"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_account"
            app:layout_constraintLeft_toRightOf="@id/headerCard_imgSearch"
            app:layout_constraintRight_toLeftOf="@id/headerCard_imgShoppingCart"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/headerCard_imgShoppingCart"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_shopping_card"
            app:layout_constraintLeft_toRightOf="@id/headerCard_imgAccount"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

