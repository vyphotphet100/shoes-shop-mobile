<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DADADA"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/img_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="Women's Shoes"
            android:textAlignment="textEnd"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Men's Shoes"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Sportswear Collection"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mainActivity_imgSearch"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:src="@drawable/ic_search"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mainActivity_imgAccount"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mainActivity_imgAccount"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:src="@drawable/ic_account"
            app:layout_constraintLeft_toRightOf="@id/mainActivity_imgSearch"
            app:layout_constraintRight_toLeftOf="@id/mainActivity_imgShoppingCart"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mainActivity_imgShoppingCart"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:src="@drawable/ic_shopping_card"
            app:layout_constraintLeft_toRightOf="@id/mainActivity_imgAccount"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

